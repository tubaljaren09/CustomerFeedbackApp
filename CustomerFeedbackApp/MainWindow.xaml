<Window x:Class="CustomerFeedbackApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerFeedbackApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Title -->
            <TextBlock Text="Customer Feedback System"
                       FontSize="24"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Submit Feedback Button -->
            <Button Content="Submit Feedback"
                    Width="200"
                    Padding="5"
                    Margin="0,10"
                    Command="{Binding SubmitFeedbackCommand}"/>

            <!-- Admin Login Button -->
            <Button Content="Login as Admin"
                    Width="200"
                    Padding="5"
                    Background="Green"
                    Command="{Binding LoginAsAdminCommand}"
                    Margin="0,20"/>

        </StackPanel>
    </Grid>
</Window>
